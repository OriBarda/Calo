// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  username String   @unique
  name     String
  password String
  role     UserRole @default(FREE)

  // AI Request Management
  aiRequestsCount   Int      @default(0)
  aiRequestsResetAt DateTime @default(now())

  // Smart watch connection
  smartWatchConnected Boolean @default(false)
  smartWatchType      String?

  // Meals stored as JSON for flexibility
  meals Json @default("{}")

  // Relationships
  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime

  // Relationships
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@map("sessions")
}

enum UserRole {
  FREE
  PREMIUM
  GOLD
}
